<h1>Show page for <%= @artist.name %> </h1>

<%= button_to "Go back to see all the artists", artists_path, method: :get %>

<p>
  Name: <%= @artist.name %>
</p>
<p>
  Age: <%= @artist.age %>
</p>
<p>
  Title: <%= @artist.title %>
</p>

<h1>All the instruments that this artist plays</h1>
<% @artist.instruments.each do |instrument| %>

  <p>
    <%= instrument.name %>
  </p>

<% end %>
